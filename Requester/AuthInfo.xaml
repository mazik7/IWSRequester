<Window x:Class="Requester.AuthInfo"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Requester"
        mc:Ignorable="d"
        Title="AuthInfo" Height="212.903" Width="300" Loaded="Window_Loaded">
    <Grid>
        <Rectangle Fill="#FFF4F4F5" Stroke="Black"/>
        <TextBox x:Name="tBoxBizUrl" Height="23" Margin="10,10,10,0" TextWrapping="Wrap" VerticalAlignment="Top"/>
        <TextBox x:Name="tBoxBizToken" Height="23" Margin="10,38,10,0" TextWrapping="Wrap" VerticalAlignment="Top"/>
        <TextBox x:Name="tBoxComUrl" Margin="10,66,10,0" TextWrapping="Wrap" Height="23" VerticalAlignment="Top"/>
        <TextBox x:Name="tBoxComToken" Margin="10,94,10,0" TextWrapping="Wrap" Height="23" VerticalAlignment="Top"/>
        <Button x:Name="btnConfigSave" Content="Save" Margin="0,0,10,23" TextOptions.TextFormattingMode="Display" TextOptions.TextHintingMode="Fixed" Background="#FFC8FFC8" Click="btnConfigSave_Click" HorizontalAlignment="Right" Width="38" Height="20" VerticalAlignment="Bottom"/>

    </Grid>
</Window>
